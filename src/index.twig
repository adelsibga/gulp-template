{% extends 'templates/layout.twig' %}

{% set lang = 'en' %}
{% set title = 'Gulp template' %}
{% set description = 'Gulp template for development' %}

{% block styles %}
{% endblock %}

{% block content %}
  <div class="container">
    <h1 class="title title_h1">
      iSpring Design system
    </h1>
    {% include './components/common/scroller/scrollerItem/index.twig' with {
      dataSpeed: 'fast',
      dataDirection: 'left',
      items: {
        1: '<img
              class="images-test"
              loading="lazy"
              src="@img/ispringUI/components/headers/top_menu/layout/responsive/ispring-suite-v3.png"
              alt="Test alt from images component"
              width="242"
              height="141"
            >',
        2: 'CSS',
        3: 'JS',
        4: 'SSG',
        5: 'webdev',
        6: 'animation',
        7: 'UI/UX',
      }
    } %}
    {% include './components/common/images/withMedia.twig' with {
      lazyContainerClass: 'lazyContainerClass',
      pictureClass: 'pictureClass',
      imgClass: 'imgClass',
      imgId: 'imgId',
      imgExt: 'png',
      imgAlt: 'imgAlt',
      imgPath: '@img/testDir/group3',
      imgExt: 'png',
      media: {
        1: {
          mediaWidth: 'max-width:767px',
          imgPath: '@img/testDir/group1',
        },
        2: {
          mediaWidth: 'max-width:1023px',
          imgPath: '@img/testDir/group2',
        },
        3: {
          mediaWidth: 'min-width:1024px',
          imgPath: '@img/testDir/group3',
        }
      }
    } %}
  </div>
{% endblock %}

{% block scripts %}
{% endblock %}
